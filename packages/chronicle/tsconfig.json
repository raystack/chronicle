{
  "extends": "@raystack/tools-config/tsconfig/react",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@/.source": ["./.source/index"]
    }
  },
  "include": ["src", ".source", "source.config.ts"],
  "exclude": ["node_modules", "dist"]
}
